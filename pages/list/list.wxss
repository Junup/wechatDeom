.user-head {
  height: 220rpx;
  background-image: linear-gradient(0deg, #0af, #0085ff);
  display: -webkit-flex;
  display: flex;
}

.user-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-top: 50rpx;
  margin-left: 30rpx;
}

.arr-right {
  width:15rpx;
  height:20rpx;
  float:right;
  position:absolute;
  right:0;
  top:35rpx;
}

navigator text{
  color: #fff;
}

navigator {
  display: -webkit-flex;
  display: flex;
  position: relative;
  flex-direction: row;
  z-index: 99
}

.user-wrap{
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
}

.login-reg{
  font-weight: bold;
  font-size: 45rpx;
}

.user-link{
  margin-left: 30rpx;
  margin-top: 50rpx;
  width: 520rpx;
}

.user-text{
  font-size: 28rpx;
}

page{
  background: #f5f5f5
}

.link-lsit{
  background-color: #fff;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  border-bottom: 1px solid #eee;
  border-top: 1px solid #eee;
  color: #333;
  padding-left: 30rpx;
  position: relative;
}

.link-list{
  margin-top: 20rpx;
  border-bottom: 1px solid #eee;
  border-top: 1px solid #eee;
}

.list-icon{
  width: 30rpx;
  height: 30rpx;
  margin-top: 31rpx;
  margin-right: 20rpx;
}

.right-icon{
  width:13rpx;
  height:25rpx;
  float:right;
  position:absolute;
  right:38rpx;
  top:36rpx;
  opacity:.5;
}

.user-content{
  display: flex;
  flex-direction:row;
  text-align: center;
  border-bottom: 1px solid #eee;
}

.link-two{
  width:50%;
  flex-direction: column;
  border-right:1px solid #eee;
  font-size: 27rpx;
  text-align: center;
  padding-bottom: 35rpx;
  padding-top: 35rpx;
  justify-content: center;
  align-items: center;
}

.link-two image{
  width: 30rpx;
  height: 30rpx;
  margin-bottom: 20rpx;
}

.user-content{
  background-color: #fff;
}