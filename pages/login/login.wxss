.logo{
    width:280rpx;
    height:112rpx;
    margin: 0 auto;
    margin-top: 80rpx;
    margin-bottom: 60rpx;
}

.text-center{
    text-align: center;
    display: flex;
    justify-content: center;
    flex-direction: column;
}

form{
    width:600rpx;
    text-align: center;
    margin: 0 auto;
}

input{
    border:1px solid #ddd;
    height:96rpx;
    line-height: 96rpx;
    text-align: left;
    box-sizing: border-box;
    padding-left: 30rpx;
    margin-top:32rpx;
    font-size: 26rpx;
}

.login-btn{
    border:none;
    width: 200rpx;
    font-size: 28rpx;
    padding: 0;
    display: inline-block
}

.login-btn:after{
  border:none;
}

.btn-area button{
    display: block;
    width: 100%;
    height: 84rpx;
    margin-top: 60rpx;
    border-radius: 8rpx;
    background: #4cd96f;
    color: #fff;
    cursor: pointer;
    text-align: center;
    font-size: 32rpx;
    line-height: 84rpx;
}

.btn-area navigator{
  color: #999;
  font-size: 24rpx;
  margin-top: 30rpx;
}

.section{
  position: relative
}

.section button{
  position:absolute;
  right:0;
  top:0;
  background:transparent;
  font-size:26rpx;
  color:#999;
  padding-top:14rpx;
  z-index: 99
}
.section button:after{
  border:none;
}
.login-text{
  color: #999;
  font-size: 26rpx;
  line-height: 40rpx;
  text-align: left;
  flex-direction: row;
  margin-top: 32rpx;
}
.login-text navigator{
  color: #2395ff;
  display: inline-block
}

.activ{
  position: relative;
  color: #2395ff;
}
.activ:after{
  position:absolute;
  width:222rpx;
  height:10rpx;
  background-color:#2395ff;
  left:43rpx;
  display:block;
  content:'';
  top:63rpx;
}
.hide{
  display: none
}
.block{
  position: absolute;
  display: block;
  right: 0;
  top: 15rpx;
  z-index: 99
}